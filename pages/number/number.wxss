/* pages/number/number.wxss */

page {
    background-color: #fff;
}

.content {
    width: 100%;
    height: 100%;
}

.lm_title {
    padding: 5px 10px;
}

.main {
    width: 100%;
    margin-top: 30rpx;
}

.doctor_card {
    padding: 5px;
    margin: 5px;
    border-bottom: 1px solid;
    border-color: rgb(207, 205, 205);
}

.doctor_name {
    font-size: 18px;
    line-height: 50px;
}

.card_btn {
    margin: 10px 0;
    border-color: transparent;
    background-color: #33cd5f;
    color: #fff;
}
.title_numer{
    text-align: center;
}
.job_title {
    line-height: 30px;
    color: red;
    /* float: right; */
}
.visit_number{
    color:#ccc
}


.card {
    padding: 10px;
    margin: 10px;
    border: 1px solid #ccc;
    border-radius: 5%;
    background-color: rgba(224, 228, 226, 0.349);
    position: relative;
}

.card_line {
    padding: 5px;
}

.card_info {
    color: #ad884f7e;
}

.card_data {
    color: black;
    float: right;
}

.card_img {
    width: 90px;
    height: 90px;
    opacity: 0.3;
    position: absolute;
    right: 10px;
}

.complete_card {
    padding: 10px;
    margin: 10px;
    border-radius: 5%;
    border: 1px solid #ccc;
    background-color: rgba(224, 228, 226, 0.349);
}

.complete_title {
    text-align: center;
    font-size: 20px;
    color: #f5ac42;
}

.item_title {
    color: #ad884f7e;
}

.item_info {
    float: right;
}

.btn_group {
    margin: 0 10px;
}

.back_btn {
    margin: 0 10px;
}

.show_null {
    text-align: center;
}

.null_text {
    color: #ccc;
}

.info_job_title{
    font-size: 15px;
    line-height: 30px;
    color:rgb(68, 63, 63)
}
.info_visit_number{
    font-size: 15px;
    color:rgb(68, 63, 63);
}
.info_introduction{
    font-size: 15px;
}
.info_box{
    border-bottom:1px solid #ccc;
}
